{
  "name": "FederatedIdentity-DevContainer",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "USERNAME": "vscode",
      "USER_UID": "1000",
      "USER_GID": "1000"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "forwardPorts": [8545, 8546],
  "postCreateCommand": "/bin/bash -lc '.devcontainer/scripts/install-besu.sh || true; node -v; forge --version; besu --version || true'",
  "customizations": {
    "vscode": {
      "extensions": [
        "JuanBlanco.solidity",
        "tintinweb.solidity-visual-auditor",
        "ms-vscode.vscode-typescript-next"
      ]
    }
  },
  "remoteUser": "vscode"
}
