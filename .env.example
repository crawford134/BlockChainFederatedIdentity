# --- Container build args ---
DEV_USER_UID=1000           # Unix UID for Dev containers (run `id -u`)
DEV_USER_GID=1000           # Unix GID for Dev containers (run `id -g`)
PROD_USER_UID=1000
PROD_USER_GID=1000

# --- Blockchain config ---
DEV_CHAIN_ID=1337           # Besu/Polygon testnet chain ID
PROD_CHAIN_ID=100           # Main consortium network chain ID

# --- Issuer DIDs & Keys ---
DEV_ISSUER_DID=did:example:bank-dev
PROD_ISSUER_DID=did:example:bank-prod
DEV_ISSUER_KID=key-1
PROD_ISSUER_KID=key-1

# --- VC Schemas ---
DEV_VC_SCHEMA_KYC=https://example.com/schemas/kyc.json
PROD_VC_SCHEMA_KYC=https://prod.example.com/schemas/kyc.json
DEV_VC_SCHEMA_GOVID=https://example.com/schemas/govid.json
PROD_VC_SCHEMA_GOVID=https://prod.example.com/schemas/govid.json

############################
# üîê SENSITIVE (store in GitHub Secrets)
############################

# --- Blockchain access ---
DEV_RPC_URL=https://besu-devnet.example.org:8545
PROD_RPC_URL=https://besu-prodnet.example.org:8545

DEV_PRIVATE_KEY=0xabc123...        # EOA key for dev contract deployment
PROD_PRIVATE_KEY=0xdef456...       # Secure or multisig key for prod

# --- DID signing (JSON Web Keys) ---
DEV_ISSUER_PRIVATE_JWK={"kty":"EC","crv":"P-256","x":"...","y":"...","d":"..."}
PROD_ISSUER_PRIVATE_JWK={"kty":"EC","crv":"P-256","x":"...","y":"...","d":"..."}

# --- App secrets ---
DEV_SESSION_SIGNING_SECRET=changeme_dev_32chars
PROD_SESSION_SIGNING_SECRET=changeme_prod_32chars

# --- Databases / caches ---
DEV_DATABASE_URL=postgresql://user:pass@localhost:5432/identity_dev
PROD_DATABASE_URL=postgresql://user:pass@db.example.com:5432/identity_prod

DEV_REDIS_URL=redis://default:pass@localhost:6379
PROD_REDIS_URL=redis://default:pass@redis.example.com:6379

# --- Encryption / gateway ---
DEV_ENCRYPTION_KEY=base64encodedkey==
PROD_ENCRYPTION_KEY=base64encodedkey==

DEV_GATEWAY_SHARED_SECRET=randomstring_dev
PROD_GATEWAY_SHARED_SECRET=randomstring_prod

# --- Optional integrations ---
DEV_AUTH0_M2M_CLIENT_SECRET=auth0clientsecret_dev
PROD_AUTH0_M2M_CLIENT_SECRET=auth0clientsecret_prod

DEV_NPM_TOKEN=npm_token_dev
PROD_NPM_TOKEN=npm_token_prod